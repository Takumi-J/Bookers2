<div class="container">
  <div class="row">


<%= render 'books/hidari', user: @user, book:@book %>

<div class="col-md-8 offset-md-1">

<!--本一覧（後で横並びにする）-->
<p id="notice"><%= notice %></p>

<h1>Books</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Body</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
      <% @books.each do |book| %>
      <tr>
        <td>
          <a href="/users/<%= book.user.id%>">
            <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %>
          </a>
        </td>
        <td><%=link_to"#{book.title}","/books/#{book.id}"%></td>
        <td><%= book.body %></td>

      </tr>
      <% end %>
  </tbody>
</table>

<!--本一覧終了-->

</div>


