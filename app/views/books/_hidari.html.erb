 <div class="col-md-3">

<!-- ユーザー画像 -->
<div class="profile-container">
  <h1>User info</h1>
  <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <h4 class="profile-name">name   <%= user.name %></h4>
  <h4 class="Introduction">Introduction   <%= user.introduction %></h4>
  
  <%= link_to "/users/#{user.id}/edit", method: :get do %>
    <i class="btn btn-outline-secondary btn-block fas fa-user-cog"></i>
  <% end %>
  
</div>
<!-- ユーザー画像　終わり -->

<!--投稿ゾーン-->
<h1>New book</h1>
<%= form_with model: book, local:true do |f| %>

<%= render 'layouts/error_messages', model: f.object %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <br>
  <%= f.submit 'Create Book' %>
<% end %>

<!--投稿ゾーン終わり-->

</div>
