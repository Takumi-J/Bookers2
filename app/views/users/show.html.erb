<div class="container"> 
  <div class="row">     
  

<%= render 'books/hidari', user: @user, book:@book %>

<!--本一覧（後で横並びにする）-->

    <p id="notice"></p>
    
<div class="col-md-8 offset-md-1">

<h1>Books</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    
      <% @books.each do |book| %>
      <tr>
        <td>
          <a href="/users/<%= @user.id%>">
            <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %></td>
          </a>
        
        <td><%=link_to"#{book.title}","/books/#{book.id}"%></td>
        <td><%= book.body %></td>
         <% if @book.user == current_user %>
        <td><%=link_to"Show","/books/#{book.id}"%></td>
        <td><%=link_to"Edit","/books/#{book.id}/edit"%></td>
        <td><%=link_to "Destroy","/books/#{book.id}", method: :delete, "data-confirm" => "Are you sure?" %></td>
        <% end %>
      </tr>
      <% end %>
  </tbody>
</table>
<!--本一覧終了-->

</div>

  </div>  
</div>    
